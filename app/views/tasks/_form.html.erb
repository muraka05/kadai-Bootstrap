<div class="row">
  <div class="col-sm-12">
  <div class="col-sm-offset-2 col-sm-8">
  <div class="col-lg-offset-3 col-sm-6"></div>
    <%= form_for(task) do |f| %>
      <% if task.errors.any? %>
        <div id="alert alert-warning">
          <ul>
            <% task.errors.full_messages.each do |task| %>
              <li><%= task %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
  
  <div class="form-group">
    <%= f.label :status, 'タイトル' %>
    <%= f.text_field :status, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :status, 'メッセージ' %>
    <%= f.text_field :status, class: 'form-control' %>
  </div>

  <%= f.submit '投稿', class: 'btn btn-primary' %>
<% end %>
